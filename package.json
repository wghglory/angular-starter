{
  "name": "angular-starter",
  "version": "0.0.1",
  "scripts": {
    "start": "ng serve",
    "build": "ng build --prod --no-progress --build-optimizer",
    "build.analyze": "npm run -s build -- --stats-json && webpack-bundle-analyzer -p 8888 dist/stats.json",
    "test": "npm run -s lint && ng test --no-progress",
    "test.once": "npm test -- --watch=false --browsers ChromeHeadlessNoSandbox",
    "test.ci": "npm run -s test.once -- --code-coverage",
    "lint": "ng lint",
    "lint.fix": "ng lint angular-starter -- --fix && ng lint angular-starter-e2e -- --fix",
    "prestart": "cd mock && npm start -- --port $((npm_package_config_port + 10)) &",
    "postinstall": "cd mock && yarn -q",
    "install.mirror": "NODEJS_ORG_MIRROR=https://npm.taobao.org/mirrors/node SASS_BINARY_SITE=https://npm.taobao.org/mirrors/node-sass PUPPETEER_DOWNLOAD_HOST=https://storage.googleapis.com.cnpmjs.org npm install -q --no-save",
    "prettier": "prettier --config ./.prettierrc  --write --list-different '{mock,server,src/{app,environments,assets},docs}/**/*{.ts,.js,.json,.css,.scss,.md}'",
    "_prettier": "prettier --config ./.prettierrc  --write '{src,mock,server,__{tests,mocks}__}/**/*.ts'",
    "_precommit": "npm run -s test.once",
    "precommit": "run-s format:fix lint",
    "format:fix": "pretty-quick --staged",
    "firebase-init": "firebase login && firebase init",
    "deploy": "firebase deploy",
    "e2e": "ng e2e"
  },
  "private": true,
  "config": {
    "port": 4200
  },
  "dependencies": {
    "@angular/animations": "^6.0.4",
    "@angular/common": "^6.0.4",
    "@angular/compiler": "^6.0.4",
    "@angular/core": "^6.0.4",
    "@angular/forms": "^6.0.4",
    "@angular/http": "^6.0.4",
    "@angular/platform-browser": "^6.0.4",
    "@angular/platform-browser-dynamic": "^6.0.4",
    "@angular/router": "^6.0.4",
    "@clr/angular": "^0.12.0-rc.2",
    "@clr/icons": "^0.12.0-rc.2",
    "@clr/ui": "^0.12.0-rc.2",
    "@webcomponents/custom-elements": "^1.1.2",
    "core-js": "^2.5.7",
    "rxjs": "^6.2.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular/cli": "~6.0.8",
    "@angular/compiler-cli": "^6.0.4",
    "@angular/language-service": "^6.0.4",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~10.1.2",
    "codelyzer": "~4.3.0",
    "husky": "^0.14.3",
    "jasmine-core": "~3.1.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.2",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^1.1.0",
    "karma-nyan-reporter": "^0.2.5",
    "karma-spec-reporter": "^0.0.32",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "pretty-quick": "^1.6.0",
    "protractor": "~5.3.2",
    "ts-node": "~6.1.0",
    "tslint": "~5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "~2.7.2",
    "webpack-bundle-analyzer": "^2.13.1"
  }
}
